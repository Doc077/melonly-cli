{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./bin",
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": ["es2021"]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "bin",
    "dist",
    "node_modules"
  ]
}
